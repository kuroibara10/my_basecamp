<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Home - Projects</title>
  <link rel="stylesheet" href="/css/home.css">
</head>
<body>
  <header>
    <h1>Welcome, <%= @user["username"] %>!</h1>
    <a class="logout-btn" href="/logout">Logout</a>
  </header>

  <main>
    <section class="top">
      <a class="btn add-project-btn" href="/home/create_project">+ Add New Project</a>
    </section>

    <section class="projects-section">
      <h2>Your Created Projects</h2>
      <div class="projects-container">
        <% @projects_created.each do |project| %>
          <div class="project-card">
            <h3><%= project["name"] %></h3>
            <p><%= project["description"] %></p>
            <div class="project-buttons">
              <a class="btn show-btn" href="/home/show_project/<%= project["id"] %>">Show</a>
              <a class="btn edit-btn" href="/home/edit_project/<%= project["id"] %>">Edit</a>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <section class="projects-section">
      <h2>Projects Shared With You</h2>
      <div class="projects-container">
        <% @projects_shared.each do |project| %>
          <div class="project-card">
            <h3><%= project["name"] %></h3>
            <p><%= project["description"] %></p>
            <div class="project-buttons">
              <a class="btn show-btn" href="/home/show_project/<%= project["id"] %>">Show</a>
              <a class="btn edit-btn" href="/home/edit_project/<%= project["id"] %>/edit">Edit</a>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <section class="projects-section">
      <h2>All Projects</h2>
      <div class="projects-container">
        <% @projects_all.each do |project| %>
          <div class="project-card">
            <h3><%= project["name"] %></h3>
            <p><%= project["description"] %></p>
            <div class="project-buttons">
              <a class="btn show-btn" href="/home/show_project/<%= project["id"] %>">Show</a>
              <a class="btn edit-btn" href="/home/edit_project/<%= project["id"] %>/edit">Edit</a>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </main>
</body>
</html>
