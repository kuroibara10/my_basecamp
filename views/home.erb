<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/css/home.css">
</head>
<body>

  <!-- HEADER -->
  <header class="header">
    <h1>Welcome, <%= @user["username"] %></h1>
    <a href="/logout" class="logout">Logout</a>
  </header>

  <!-- MAIN -->
  <main class="dashboard">

    <!-- SECTION 1: ALL PROJECTS -->
    <section class="card">
      <h2>All Projects</h2>

      <% if @projects_all.empty? %>
        <p class="empty">No projects available</p>
      <% else %>
        <ul class="project-list">
          <% @projects_all.each do |project| %>
            <li class="project-item">
              <h3><%= project["name"] %></h3>
              <p><%= project["description"] %></p>
              <span class="badge">
                Owner: <%= project["user_id"] == @user["id"] ? "You" : project["email_origin"] %>
              </span>
            </li>
          <% end %>
        </ul>
      <% end %>
    </section>

    <!-- SECTION 2: CREATED PROJECTS -->
    <section class="card">
      <h2>Projects You Created</h2>

      <% if @projects_created.empty? %>
        <p class="empty">You haven't created any projects</p>
      <% else %>
        <ul class="project-list">
          <% @projects_created.each do |project| %>
            <li class="project-item">
              <h3><%= project["name"] %></h3>
              <p><%= project["description"] %></p>
            </li>
          <% end %>
        </ul>
      <% end %>
    </section>

    <!-- SECTION 3: SHARED PROJECTS -->
    <section class="card">
      <h2>Projects Shared With You</h2>

      <% if @projects_shared.empty? %>
        <p class="empty">No shared projects</p>
      <% else %>
        <ul class="project-list">
          <% @projects_shared.each do |project| %>
            <li class="project-item">
              <h3><%= project["name"] %></h3>
              <p><%= project["description"] %></p>
              <span class="badge">From: <%= project["email_origin"] %></span>
            </li>
          <% end %>
        </ul>
      <% end %>
    </section>

  </main>

</body>
</html>
